<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Blog</title>
</head>
<body>
    <div class="container">
        <h1 class="mb-4">Blog Articles</h1>
        <a href="/articles/new" class="btn btn-success">New Article</a>
        <% articles.forEach(articles=>{%>
            <div class="card my-4">
                <div class="card-body">
                    <div class="card-title"><%= articles.title %></div>
                    <div class="card-subtitle text-muted mb-2"><%= articles.createdAt.toLocaleDateString() %></div>
                    <div class="card-text mb-2"><%= articles.description %></div>
                    <a href="/articles/<%=articles.slug %>" class="btn btn-info">
                        Read More</a>
                    <a href="/articles/edit/<%= articles.id %>" class="btn btn-info">
                            Edit</a>
                    <form action="/articles/<%= articles.id %>?_method=DELETE" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        <%})  %>
    </div>
</body>
</html>